<concept id="concept_wmx_vlh_dy">
    <title>Allgemeine Metadaten</title>
    <concept id="concept_sp4_r3n_my">
        <title><?oxy_custom_start type="oxy_content_highlight" color="255,255,0"?><b>URI der
                Archivalie</b><?oxy_custom_end?></title>
